<Window x:Class="GGOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection Window" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Connection Buttons -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Name="HostButton" Content="Host" Width="80" Margin="0,0,10,0" Click="HostButton_Click" />
            <Button Name="JoinButton" Content="Join" Width="80" Margin="0,0,10,0" Click="JoinButton_Click" />
            <Button Name="DisconnectButton" Content="Disconnect" Width="80" IsEnabled="False" Click="DisconnectButton_Click" />
        </StackPanel>

        <!-- IP Address Input -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="1">
            <TextBox Name="IpTextBox" Width="150" Text="127.0.0.1" Margin="0,0,10,0" />
        </StackPanel>

        <!-- Log Output -->
        <ScrollViewer Name="LogScrollViewer" Grid.Row="2" Margin="0,0,0,10" VerticalScrollBarVisibility="Auto">
            <TextBox Name="LogTextBox" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Top" 
                     IsReadOnly="True" 
                     IsReadOnlyCaretVisible="False" 
                     Background="Transparent" 
                     BorderThickness="0" 
                     VerticalScrollBarVisibility="Hidden"
                     AcceptsReturn="True" />
        </ScrollViewer>

        <!-- Message Input and Send Button -->
        <StackPanel Orientation="Horizontal" Grid.Row="3">
            <TextBox Name="MessageTextBox" Width="400" Margin="0,0,10,0" KeyDown="MessageTextBox_KeyDown" />
            <Button Name="SendButton" Content="Send" Width="80" IsEnabled="False" Click="SendButton_Click" />
        </StackPanel>
    </Grid>
</Window>
