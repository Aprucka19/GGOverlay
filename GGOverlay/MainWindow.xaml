<Window x:Class="GGOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GGOverlay"
        Title="Game Lobby" Height="600" Width="800">
    <Grid Margin="10">
        <!-- Top Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button x:Name="CreateProfileButton" Content="Create Profile" Width="120" Height="40"
                    Margin="0,0,10,0" Click="CreateProfileButton_Click"/>
            <Button x:Name="HostButton" Content="Host Lobby" Width="120" Height="40"
                    Margin="0,0,10,0" Click="HostButton_Click"/>
            <Button x:Name="JoinButton" Content="Join Lobby" Width="120" Height="40"
                    Margin="0,0,10,0" Click="JoinButton_Click"/>
            <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                <TextBlock Text="Server IP Address:" FontWeight="Bold"/>
                <TextBox Text="127.0.0.1" x:Name="IpAddressTextBox" Width="200" Height="30"/>
            </StackPanel>
        </StackPanel>

        <!-- Local Profile Display -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,0,0">
            <TextBlock Text="Local Profile" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <Image x:Name="LocalProfileImage" Width="100" Height="100" Margin="0,0,0,5"/>
            <TextBlock x:Name="LocalProfileName" Text="Name" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="LocalProfileScaler" Text="Scaler: 0.0" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Counter Display and Controls -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0">
            <TextBlock Text="Counter Value:" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox x:Name="CounterTextBox" Width="60" Height="40" Text="0" IsReadOnly="True"
                     TextAlignment="Center" FontSize="20" Margin="0,5,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="MinusButton" Content="-" Width="40" Height="40" Click="MinusButton_Click"/>
                <Button x:Name="PlusButton" Content="+" Width="40" Height="40" Margin="20,0,0,0" Click="PlusButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Connected Profiles List -->
        <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto" 
                      HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,160">
            <StackPanel Orientation="Horizontal" x:Name="ProfilesPanel">
                <!-- Profiles will be dynamically added here -->
            </StackPanel>
        </ScrollViewer>

        <!-- Log TextBox -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <TextBlock Text="Log:" FontWeight="Bold"/>
            <TextBox x:Name="LogTextBox" Height="150" IsReadOnly="True" Margin="0,5,0,0"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </Grid>
</Window>
