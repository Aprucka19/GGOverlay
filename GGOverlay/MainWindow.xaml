<Window x:Class="GGOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection Window" Height="400" Width="600">
    <StackPanel Margin="10">

        <!-- Connection Buttons -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Name="HostButton" Content="Host" Width="80" Margin="0,0,10,0" Click="HostButton_Click" />
            <Button Name="JoinButton" Content="Join" Width="80" Margin="0,0,10,0" Click="JoinButton_Click" />
            <Button Name="DisconnectButton" Content="Disconnect" Visibility="Collapsed" Margin="0,0,10,0" Width="80" IsEnabled="False" Click="DisconnectButton_Click" />
            <Button Name="EditPlayerButton" Content="Edit Player" Visibility="Collapsed" Width="80" Margin="0,0,10,0" Click="EditPlayer_Click" />
            <Button Name="SetRules" Content="Set Rules" Margin="0,0,10,0" Width="80" Visibility="Collapsed" Click="SetRules_Click" />
        </StackPanel>

        <!-- IP Address Input -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Name="IpTextBox" Width="150" Text="127.0.0.1" Margin="0,0,10,0" />
        </StackPanel>

        <!-- Player Info Section -->
        <StackPanel Margin="0,0,0,10" Visibility="Collapsed" Name="PlayerInfoSection">
            <TextBlock Name="PlayerInfoTextBlock"
                       Text="No Player Info Loaded"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top" />
        </StackPanel>

        <!-- Game Rules Display -->
        <StackPanel Margin="0,0,0,10" Visibility="Collapsed" Name="GameRulesSection">
            <TextBlock Name="GameRulesTextBlock"
                       Text="No Game Rules Loaded"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top" />
        </StackPanel>

        <!-- Log Output Section -->
        <StackPanel Orientation="Vertical">
            <Button Name="ToggleLogs" Content="Show Logs" Margin="0,0,10,0" Width="80" Click="ToggleLogs_Click" />
            <ScrollViewer Visibility="Collapsed" Name="LogScrollViewer" Margin="0,0,0,10" VerticalScrollBarVisibility="Visible" Height="Auto">
                <TextBox Name="LogTextBox"
                         TextWrapping="Wrap"
                         VerticalAlignment="Top"
                         IsReadOnly="True"
                         IsReadOnlyCaretVisible="False"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalScrollBarVisibility="Hidden"
                         AcceptsReturn="True" />
            </ScrollViewer>
        </StackPanel>
    </StackPanel>
</Window>
