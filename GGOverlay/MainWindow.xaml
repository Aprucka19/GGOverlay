<Window x:Class="GGOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GGOverlay"
        Title="Host/Join Application" Height="400" Width="500">
    <Window.Resources>
        <!-- Register the converter -->
    </Window.Resources>

    <Grid Margin="10">
        <!-- Host and Join Buttons -->
        <Button x:Name="HostButton" Content="Host Server" Width="120" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,10,0" Click="HostButton_Click"/>
        <Button x:Name="JoinButton" Content="Join Server" Width="120" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,60,10,0" Click="JoinButton_Click"/>

        <!-- IP Address Input -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,0,0,0">
            <TextBlock Text="Server IP Address:" Margin="0,10,0,0" FontWeight="Bold"/>
            <Grid Margin="0,5,0,0">
                <TextBox x:Name="IpAddressTextBox" Width="200" Height="30"/>
            </Grid>
        </StackPanel>

        <!-- Counter Display and Controls -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,120,0,0">
            <TextBlock Text="Counter Value:" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox x:Name="CounterTextBox" Width="60" Height="40" Text="0" IsReadOnly="True" TextAlignment="Center" FontSize="20" Margin="0,5,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="MinusButton" Content="-" Width="40" Height="40" Click="MinusButton_Click"/>
                <Button x:Name="PlusButton" Content="+" Width="40" Height="40" Margin="20,0,0,0" Click="PlusButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Log TextBox -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <TextBlock Text="Log:" FontWeight="Bold"/>
            <TextBox x:Name="LogTextBox" Width="460" Height="120" IsReadOnly="True" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>