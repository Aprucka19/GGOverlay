<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Counter Sync App" Height="200" Width="200">
    <StackPanel>
        <Button Content="Increment" Click="Increment_Click"/>
        <Button Content="Decrement" Click="Decrement_Click"/>
        <Label x:Name="lblCounter" HorizontalAlignment="Center" FontSize="16"/>
    </StackPanel>
</Window>
