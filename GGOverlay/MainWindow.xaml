<Window x:Class="GGOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Host/Join Application" Height="300" Width="400">
    <Grid>
        <Button x:Name="HostButton" Content="Host Server" Width="120" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Click="HostButton_Click"/>
        <Button x:Name="JoinButton" Content="Join Server" Width="120" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0" Click="JoinButton_Click"/>

        <!-- TextBox with Placeholder functionality -->
        <Grid Margin="150,60,0,0">
            <TextBox x:Name="IpAddressTextBox" Width="180" Height="30" VerticalAlignment="Top"/>
            <TextBlock x:Name="PlaceholderText" Text="Enter IP Address" 
                   VerticalAlignment="Center" Margin="5,0,0,0"
                   Foreground="Gray" IsHitTestVisible="False" />
        </Grid>

        <TextBox x:Name="LogTextBox" Width="360" Height="120" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0" IsReadOnly="True"/>
    </Grid>

</Window>
