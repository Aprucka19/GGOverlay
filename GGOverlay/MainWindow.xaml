<Window x:Class="GGOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection Window" Height="600" Width="1200"
        Background="#2D2D30" Foreground="#E6E6E6" FontFamily="Segoe Script"
        WindowStyle="None" ResizeMode="CanResizeWithGrip" AllowsTransparency="True">
    <Window.Resources>
        <!-- Style for buttons -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#E6E6E6"/>
            <Setter Property="Background" Value="#444444"/>
            <Setter Property="FontFamily" Value="Segoe Script"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <!-- Trigger for changing background and text color when the button is hovered -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#555555"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <!-- Trigger for changing text color when the button is selected -->
                <Trigger Property="Tag" Value="Selected">
                    <Setter Property="Background" Value="LightBlue"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for text blocks and labels -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E6E6E6"/>
            <Setter Property="FontFamily" Value="Segoe Script"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <!-- Style for text boxes -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="#E6E6E6"/>
            <Setter Property="Background" Value="#444444"/>
            <Setter Property="FontFamily" Value="Segoe Script"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#5A5A5A" BorderThickness="1">
        <Grid Background="#2D2D30">
            <!-- Custom Top Bar -->
            <Grid Background="#3B3B3D" Height="40" VerticalAlignment="Top" MouseDown="TopBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Draggable Area -->
                <TextBlock Text="Connection Window" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>

                <!-- Close Button -->
                <Button Content="X" Width="40" Height="30" Margin="0,0,10,0" Background="#5A5A5A" Foreground="White" 
                        FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Click="ExitButton_Click"
                        BorderBrush="#4A4A4A" BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D32F2F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <StackPanel Margin="10,50,10,10" VerticalAlignment="Top" Grid.Row="1">
                <!-- Connection Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Name="HostButton" Content="Host" Click="HostButton_Click"/>
                    <Button Name="JoinButton" Content="Join" Click="JoinButton_Click"/>
                    <Button Name="DisconnectButton" Content="Disconnect" Visibility="Collapsed" IsEnabled="False" Click="DisconnectButton_Click"/>
                    <Button Name="EditPlayerButton" Content="Edit Player" Visibility="Collapsed" Click="EditPlayer_Click"/>
                    <Button Name="SetRules" Content="Set Rules" Visibility="Collapsed" Click="SetRules_Click"/>
                </StackPanel>

                <!-- IP Address Input -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox Name="IpTextBox" Width="150" Text="127.0.0.1"/>
                </StackPanel>

                <!-- You Section -->
                <StackPanel Margin="0,0,0,10" Visibility="Collapsed" Name="YouSection">
                    <TextBlock Text="You:" FontWeight="Bold"/>
                    <TextBlock Name="LocalPlayerTextBlock"
                               Text="Click Edit Player"
                               TextWrapping="Wrap"
                               VerticalAlignment="Top"/>
                </StackPanel>

                <!-- Lobby Section -->
                <StackPanel Margin="0,0,0,10" Visibility="Collapsed" Name="LobbySection">
                    <TextBlock Text="Lobby:" FontWeight="Bold"/>
                    <TextBlock Name="LobbyPlayersTextBlock"
                               Text="No Players in Lobby"
                               TextWrapping="Wrap"
                               VerticalAlignment="Top"/>
                </StackPanel>

                <!-- Game Rules Display -->
                <StackPanel Margin="0,0,0,10" Visibility="Collapsed" Name="GameRulesSection">
                    <TextBlock Name="GameRulesTextBlock"
                               Text="No Game Rules Loaded"
                               TextWrapping="Wrap"
                               VerticalAlignment="Top"/>
                </StackPanel>

                <!-- Log Output Section -->
                <StackPanel Orientation="Vertical">
                    <Button Name="ToggleLogs" Content="Show Logs" Click="ToggleLogs_Click"/>
                    <ScrollViewer Visibility="Collapsed" Name="LogScrollViewer" Margin="0,0,0,10" VerticalScrollBarVisibility="Visible" Height="Auto">
                        <TextBox Name="LogTextBox"
                                 TextWrapping="Wrap"
                                 VerticalAlignment="Top"
                                 IsReadOnly="True"
                                 IsReadOnlyCaretVisible="False"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 VerticalScrollBarVisibility="Hidden"
                                 AcceptsReturn="True"/>
                    </ScrollViewer>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
